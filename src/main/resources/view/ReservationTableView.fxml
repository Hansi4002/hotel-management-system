<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1190.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.hotelmanagementsystem.controller.ReservationTableController">
   <children>
      <BorderPane prefHeight="800.0" prefWidth="1190.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <fx:include source="NavigationBar.fxml" />
         </top>
         <bottom>
            <HBox alignment="CENTER" prefHeight="0.0" prefWidth="1000.0" style="-fx-background-color: #096B68;" BorderPane.alignment="CENTER">
               <children>
                  <Label text="PulseHorizon Hotel" textFill="WHITE">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </bottom>
         <center>
            <VBox spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox spacing="10.0" style="-fx-background-color: #ffff; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="RESERVATION LIST" textFill="#2c3e50">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#btnCancelOnAction" style="-fx-background-color: #e74c3c; -fx-background-radius: 4;" text="Cancel" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                                 </padding>
                              </Button>
                              <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#btnEditOnAction" style="-fx-background-color: #f39c12; -fx-background-radius: 4;" text="Edit" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                                 </padding>
                              </Button>
                              <Button fx:id="btnAddReservation" mnemonicParsing="false" onAction="#btnAddNewReservationOnAction" style="-fx-background-color: #27ae60; -fx-background-radius: 4;" text="Add New Room" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                                 </padding>
                              </Button>
                           </children>
                        </HBox>
                        <Separator style="-fx-background-color: #ecf0f1;" />
                        <TableView fx:id="tblReservation" prefHeight="602.0" prefWidth="878.0" style="-fx-background-radius: 4; -fx-border-radius: 4;">
                           <columns>
                              <TableColumn fx:id="colReservationId" text="Reservation ID" />
                              <TableColumn fx:id="colGuestId" text="Guest ID" />
                              <TableColumn fx:id="colRoomId" text="Room ID" />
                              <TableColumn fx:id="colCheckInDate" text="Check-In Date" />
                              <TableColumn fx:id="colCheckOutDate" text="Check-Out Date" />
                              <TableColumn fx:id="colBookingTime" text="Booking Time" />
                              <TableColumn fx:id="colNumberOfGuests" text="Number of Guests" />
                              <TableColumn fx:id="colStatus" text="Status" />
                              <TableColumn fx:id="colTotalCost" text="Total Cost" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
