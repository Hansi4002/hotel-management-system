                           <columns>
                              <TableColumn fx:id="colPaymentId" text="Payment ID" prefWidth="100.0" />
                              <TableColumn fx:id="colReservationId" text="Reservation ID" prefWidth="120.0" />
                              <TableColumn fx:id="colPaymentDate" text="Payment Date" prefWidth="150.0" />
                              <TableColumn fx:id="colAmount" text="Amount" prefWidth="100.0" />
                              <TableColumn fx:id="colTransactionID" text="Transaction ID" prefWidth="150.0" />
                              <TableColumn fx:id="colPaymentMethod" text="Payment Method" prefWidth="120.0" />
                              <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
                           </columns>
                           <placeholder>
                              <Label text="No payments found" style="-fx-text-fill: #34495e;" />
                           </placeholder>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </center>
         <top>
            <HBox fx:id="navigationBar" style="-fx-background-color: #096B68;" HBox.hgrow="ALWAYS" BorderPane.alignment="CENTER">
               <children>
                  <Button text="Home" style="-fx-background-color: transparent; -fx-text-fill: WHITE;" onAction="#navigateHome">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button text="Reservations" style="-fx-background-color: transparent; -fx-text-fill: WHITE;" onAction="#navigateReservations">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button text="Payments" style="-fx-background-color: transparent; -fx-text-fill: WHITE;" onAction="#navigatePayments">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                     </padding>
                  </Button>
                  <Region HBox.hgrow="ALWAYS" />
