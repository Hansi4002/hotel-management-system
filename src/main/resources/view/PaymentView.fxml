                                 <tooltip>
                                    <Tooltip text="Search by Payment ID, Reservation ID, Transaction ID, or Status" />
                                 </tooltip>
                              </TextField>
                              <Button fx:id="btnClearSearch" mnemonicParsing="false" onAction="#btnClearSearchOnAction" style="-fx-background-color: #e74c3c; -fx-background-radius: 4;" text="Clear" textFill="WHITE">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                                 <padding>
                                    <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
                                 </padding>
                                 <tooltip>
                                    <Tooltip text="Clear search and show all payments" />
                                 </tooltip>
                              </Button>
                              <Label fx:id="selectionFeedback" text="" textFill="#34495e" HBox.hgrow="SOMETIMES">
