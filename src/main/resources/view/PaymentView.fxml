<AnchorPane prefHeight="800.0" prefWidth="1190.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.hotelmanagementsystem.controller.PaymentTableController">
   <children>
      <BorderPane prefHeight="801.0" prefWidth="1190.4" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <HBox alignment="CENTER" style="-fx-background-color: #096B68;" HBox.hgrow="ALWAYS">
